{
    "name": "@open-hackathon/web",
    "version": "0.13.0",
    "private": true,
    "main": "src/index.html",
    "dependencies": {
        "boot-cell": "^1.3.4",
        "bootstrap-icons": "^1.1.0",
        "browser-unhandled-rejection": "^1.0.2",
        "cell-router": "^2.0.1",
        "classnames": "^2.2.6",
        "koajax": "^0.6.4",
        "mobx": "^5.15.7",
        "mobx-web-cell": "^0.3.2",
        "quill": "^1.3.7",
        "web-cell": "^2.2.0",
        "web-utility": "^2.0.0"
    },
    "devDependencies": {
        "@types/classnames": "^2.2.11",
        "@types/quill": "^2.0.4",
        "@typescript-eslint/parser": "^4.8.1",
        "autoprefixer": "^9.8.6",
        "eslint": "^7.14.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.3.0",
        "less": "^3.12.2",
        "lint-staged": "^10.5.2",
        "parcel-bundler": "^1.12.4",
        "postcss-modules": "^3.2.2",
        "prettier": "^2.2.0",
        "typescript": "^4.1.2",
        "workbox-cli": "^4.3.1"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{html,md,css,less,json,yml}": [
            "prettier --write"
        ],
        "*.{js,ts,tsx}": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "postcss": {
        "modules": true,
        "plugins": {
            "autoprefixer": {
                "grid": true
            }
        }
    },
    "scripts": {
        "test": "lint-staged",
        "start": "workbox generateSW  &&  parcel src/index.html --open",
        "pack": "parcel build src/index.html --public-url .",
        "build": "rm -rf dist/  &&  npm run pack  &&  workbox generateSW"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    }
}
