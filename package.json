    "array-unique-proposal": "^0.3.4",
    "classnames": "^2.5.1",
    "echarts-jsx": "^0.5.4",
    "idea-react": "^2.0.0-rc.8",
    "jsonwebtoken": "^9.0.2",
    "koajax": "^3.1.1",
    "leaflet": "^1.9.4",
    "leaflet.chinatmsproviders": "^3.0.6",
    "mobx": "^6.13.6",
    "mobx-github": "^0.3.5",
    "mobx-i18n": "^0.6.0",
    "mobx-react": "^9.2.0",
    "mobx-react-helper": "^0.3.1",
    "mobx-restful": "^2.1.0",
    "mobx-restful-table": "^2.0.2",
