    "eslint-plugin-simple-import-sort": "^12.1.1",
    "get-git-folder": "^0.1.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "less": "^4.2.2",
    "less-loader": "^12.2.0",
