{
    "name": "@open-hackathon/web",
    "version": "0.14.0",
    "private": true,
    "main": "src/index.html",
    "dependencies": {
        "@authing/native-js-ui-components": "^2.4.24",
        "boot-cell": "^1.9.5",
        "browser-unhandled-rejection": "^1.0.2",
        "cell-router": "^2.0.4",
        "classnames": "^2.3.1",
        "koajax": "^0.6.5",
        "mobx": "^5.15.7",
        "mobx-web-cell": "^0.3.5",
        "quill": "^1.3.7",
        "quill-image-uploader": "^1.2.2",
        "web-cell": "^2.3.0",
        "web-utility": "^2.5.4"
    },
    "devDependencies": {
        "@types/classnames": "^2.3.1",
        "@types/quill": "^2.0.8",
        "@typescript-eslint/parser": "^4.27.0",
        "autoprefixer": "^9.8.6",
        "eslint": "^7.28.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-prettier": "^3.4.0",
        "husky": "^6.0.0",
        "less": "^4.1.1",
        "lint-staged": "^11.0.0",
        "parcel-bundler": "^1.12.5",
        "postcss-modules": "^3.2.2",
        "prettier": "^2.3.1",
        "typescript": "^4.3.3",
        "workbox-cli": "^6.1.5"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{html,md,css,less,json,yml}": "prettier --write",
        "*.{js,ts,tsx}": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "postcss": {
        "modules": true,
        "plugins": {
            "autoprefixer": {
                "grid": true
            }
        }
    },
    "scripts": {
        "prepare": "husky install",
        "test": "lint-staged",
        "start": "parcel src/index.html --open",
        "pack": "parcel build src/index.html --public-url .",
        "build": "rm -rf dist/  &&  npm run pack  &&  workbox generateSW"
    }
}
