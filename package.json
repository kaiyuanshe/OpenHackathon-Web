{
    "name": "@open-hackathon/web",
    "version": "0.5.0",
    "private": true,
    "main": "src/index.html",
    "dependencies": {
        "boot-cell": "^1.0.0-beta.1",
        "browser-unhandled-rejection": "^1.0.2",
        "cell-router": "^2.0.0-rc.6",
        "classnames": "^2.2.6",
        "koajax": "^0.6.0",
        "mobx": "^5.15.4",
        "mobx-web-cell": "^0.2.5",
        "regenerator-runtime": "^0.13.3",
        "web-cell": "2.0.0-rc.19"
    },
    "devDependencies": {
        "@typescript-eslint/parser": "^2.20.0",
        "autoprefixer": "^9.7.4",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-prettier": "^3.1.2",
        "husky": "^4.2.3",
        "less": "^3.11.1",
        "lint-staged": "^10.0.7",
        "parcel-bundler": "^1.12.4",
        "postcss-modules": "^1.5.0",
        "prettier": "^1.19.1",
        "typescript": "^3.8.2",
        "workbox-cli": "^5.0.0"
    },
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{html,md,css,less,json,yml}": [
            "prettier --write"
        ],
        "*.{js,ts,tsx}": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "postcss": {
        "modules": true,
        "plugins": {
            "autoprefixer": {
                "grid": true
            }
        }
    },
    "scripts": {
        "test": "lint-staged",
        "start": "workbox generateSW  &&  parcel src/index.html --open",
        "pack-dist": "parcel build src/index.html --public-url .",
        "pack-sw": "rm -f dist/sw.js.map  &&  workbox generateSW",
        "build": "rm -rf dist/  &&  npm run pack-dist  &&  npm run pack-sw"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    }
}
